<div class="w-full">

  <div class="flex flex-col justify-center items-center gap-8">
    <%= form_with(url: events_path, method: :get, local: true, class: "flex flex-wrap space-x-4") do %>
      <div>
        <label for="search_title" class="block text-sm font-medium text-gray-700">Search by Title</label>
        <%= text_field_tag :search_title, params[:search_title], placeholder: "Event Title", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <label for="search_location" class="block text-sm font-medium text-gray-700">Search by Location</label>
        <%= text_field_tag :search_location, params[:search_location], placeholder: "Location", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div class="flex items-end">
        <%= submit_tag "Search", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>

    <div class="flex flex-col justify-between gap-6 items-center">
      <h1 class="font-bold text-4xl mx-20">Events</h1>
      <% if is_user_admin? %>
        <%= link_to "Add New event", new_event_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
      <% end %>
    </div>

    <div id="events" class="flex justify-center flex-col items-center">
      <% @events.each do |event| %>
        <%= render event %>
        <p>
          <%= link_to "Show this event", event, class: "ml-2 mb-6 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
